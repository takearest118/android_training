<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center" >
    
    <LinearLayout
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#D3D3D3"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/notify_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="@string/notify_button" />
        
		<Spinner
		    android:id="@+id/category_spinner"
		    android:dropDownWidth="300dp"
		    android:gravity="center"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />
		
        <SearchView
            android:id="@+id/searchView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToPadding="true"
            android:paddingLeft="50dp" >

        </SearchView>

    </LinearLayout>

    <TabHost
        android:id="@+id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TabWidget
                android:id="@android:id/tabs"
                android:background="#BEBEBE"
                android:layout_width="wrap_content"
                android:layout_height="45dp" >

            </TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                
                <LinearLayout
                    android:id="@+id/home_tab"
                    android:baselineAligned="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
					<GridView
                        android:id="@+id/home_grid_view"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:horizontalSpacing="10dp"
                        android:verticalSpacing="10dp"
                        android:numColumns="2" >
                    </GridView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/friends_tab"
                    android:baselineAligned="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ListView
                        android:id="@+id/friends_list_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >
                    </ListView>

                </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/profile_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                </LinearLayout>
                
				<LinearLayout
                    android:id="@+id/more_tab"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

					<TextView
					    android:id="@+id/more_setting"
					    android:text="@string/more_setting"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content" />
					<TextView
					    android:id="@+id/more_notify"
					    android:text="@string/more_notify"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content" />
					<TextView
					    android:id="@+id/more_invite_friend"
					    android:text="@string/more_invite_friend"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content" />
                </LinearLayout>
                
            </FrameLayout>
        </LinearLayout>
    </TabHost>
	
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:paddingBottom="16dp" >
	
	    <ImageView
	        android:id="@+id/item_image"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_gravity="center"
	        android:contentDescription="item_image"
	        android:onClick="clickItemImage"
	        android:scaleType="fitCenter" />
	    
	    <RelativeLayout
	        android:layout_marginTop="8dp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	        <ImageView
	            android:id="@+id/writer_photo"
	            android:layout_width="32dp"
	            android:layout_height="32dp"
	            android:layout_marginLeft="16dp" />
	
	        <TextView
	            android:id="@+id/writer_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentTop="true"
	            android:layout_marginLeft="8dp"
	            android:layout_toRightOf="@+id/writer_photo"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	
	        <TextView
	            android:id="@+id/writer_date"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignLeft="@+id/writer_name"
	            android:layout_below="@+id/writer_name"
	            android:textAppearance="?android:attr/textAppearanceSmall" />
	        
	    </RelativeLayout>
	    
	    <TextView
	        android:id="@+id/item_title"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="16dp"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	    
	</LinearLayout>
	    
</ScrollView>

